// Prisma schema for registration form with Neon DB
// Add your Neon DB connection string in .env as DATABASE_URL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Registration {
  id                Int      @id @default(autoincrement())
  name              String
  email             String
  contact           String
  program           String
  semester          String
  rollno            String
  event             String
  team              String?
  userId            String?
  cnicOrStudentCardUrl Bytes?
  transactionId     String
  accountNo         String
  paymentSlipUrl    Bytes?
  createdAt         DateTime @default(now())
}
